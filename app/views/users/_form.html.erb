<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :username %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :username, class: 'form-control', placeholder: 'What is your name?', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :email %>
        </div>
        <div class="col-sm-4">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Your email, please' %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :password %>
        </div>
        <div class="col-sm-4">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Super secure password' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit @user.new_record? ? 'Sign up' : 'Update', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>