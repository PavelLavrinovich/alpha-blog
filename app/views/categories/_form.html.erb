<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@category, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :name %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name of your category', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>