<% if @article.errors.any? %>
  <div class="field_with_errors">
    <h2>The article can't be saved</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-7">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of your article', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-7">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Some description' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-11">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>