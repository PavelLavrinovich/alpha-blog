<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-7">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of your article', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-7">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Some description' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-6">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: 'checkbox-inline input_checkbox') { cb.check_box(class: 'checkbox') + cb.text} %>
          <% end %>
        </div>
      </div>
      <br/>
      <div class="form-group">
        <div class="col-sm-11">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>