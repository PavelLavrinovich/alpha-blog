<h1>Log in</h1>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(:session, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :email %>
        </div>
        <div class="col-sm-4">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Your email, please' %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-4">
          <%= f.label :password %>
        </div>
        <div class="col-sm-4">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Don\'t remember? It\'s sad.' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>